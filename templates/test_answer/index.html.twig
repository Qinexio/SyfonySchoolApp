{% extends 'base.html.twig' %}

{% block title %}TestAnswer index{% endblock %}

{% block body %}
    <h1>TestAnswer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TestAnswerText</th>
                <th>TestAnswerIsCorrect</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for test_answer in test_answers %}
            <tr>
                <td>{{ test_answer.id }}</td>
                <td>{{ test_answer.testAnswerText }}</td>
                <td>{{ test_answer.testAnswerIsCorrect ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('test_answer_show', {'id': test_answer.id}) }}">show</a>
                    <a href="{{ path('test_answer_edit', {'id': test_answer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('test_answer_new') }}">Create new</a>
{% endblock %}
