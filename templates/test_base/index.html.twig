{% extends 'base.html.twig' %}

{% block title %}TestBase index{% endblock %}

{% block body %}
    <h1>TestBase index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TestName</th>
                <th>TestDescription</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for test_base in test_bases %}
            <tr>
                <td>{{ test_base.id }}</td>
                <td>{{ test_base.testName }}</td>
                <td>{{ test_base.testDescription }}</td>
                <td>
                    <a href="{{ path('test_base_show', {'id': test_base.id}) }}">show</a>
                    <a href="{{ path('test_base_edit', {'id': test_base.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('test_base_new') }}">Create new</a>
{% endblock %}
