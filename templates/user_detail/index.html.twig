{% extends 'base.html.twig' %}

{% block title %}UserDetail index{% endblock %}

{% block body %}
    <h1>UserDetail index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserEmail</th>
                <th>UserValid</th>
                <th>UserKey</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user_detail in user_details %}
            <tr>
                <td>{{ user_detail.id }}</td>
                <td>{{ user_detail.userEmail }}</td>
                <td>{{ user_detail.userValid ? 'Yes' : 'No' }}</td>
                <td>{{ user_detail.userKey }}</td>
                <td>
                    <a href="{{ path('user_detail_show', {'id': user_detail.id}) }}">show</a>
                    <a href="{{ path('user_detail_edit', {'id': user_detail.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_detail_new') }}">Create new</a>
{% endblock %}
